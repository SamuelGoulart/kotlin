<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NcdActivity"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="NCD"
            android:textAppearance="@style/titulo"
            android:textSize="64sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="-48dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="32sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso"
                    android:textAppearance="@style/label_dark_form" />

                <EditText
                    android:id="@+id/edit_Text_Peso_Ncd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_round_background"
                    android:hint="Qual o seu peso?"
                    android:inputType="number"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade"
                    android:textAppearance="@style/label_dark_form" />

                <EditText
                    android:id="@+id/edit_Text_Idade_Ncd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_round_background"
                    android:hint="Qual Ã© a sua idade?"
                    android:inputType="number"
                    android:padding="12dp" />

                <RadioGroup
                    android:id="@+id/radio_Group_Sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:checkedButton="@id/radioButtonMasculino">

                    <RadioButton
                        android:id="@+id/radioButtonMasculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:enabled="true"
                        android:text="@string/radioButtonMasculino"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioButtonFeminino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="@string/radioButtonFeminino"
                        android:textColor="#FFFFFF" />

                </RadioGroup>

                <Spinner
                    android:id="@+id/grau_atividade_fisica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFDFD"
                    android:entries="@array/grauAtividade"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/button_calcular_ncd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_button"
                    android:padding="12dp"
                    android:text="Calcular IMC"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
